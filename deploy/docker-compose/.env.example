# =============================================================================
# Prism Infrastructure Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# PostgreSQL - Auth Database
# =============================================================================
POSTGRES_AUTH_USER=prism
POSTGRES_AUTH_PASSWORD=CHANGE_ME_auth_password_here
POSTGRES_AUTH_DB=prism_auth

# =============================================================================
# PostgreSQL - Operational Database
# =============================================================================
POSTGRES_OPS_USER=prism
POSTGRES_OPS_PASSWORD=CHANGE_ME_ops_password_here
POSTGRES_OPS_DB=prism_ops

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_redis_password_here

# =============================================================================
# MinIO (S3-compatible storage for backups)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_minio_password_here

# =============================================================================
# Grafana
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_grafana_password_here

# =============================================================================
# Auth Service - JWT Keys
# =============================================================================
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem
JWT_ISSUER=prism
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h

# =============================================================================
# Auth Service - OAuth Providers (optional)
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:8081/auth/google/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=http://localhost:8081/auth/github/callback

# =============================================================================
# Consul
# =============================================================================
CONSUL_HTTP_TOKEN=

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=debug
LOG_FORMAT=json

# =============================================================================
# Service Ports (rarely need to change)
# =============================================================================
GATEWAY_PORT=8080
GATEWAY_HEALTH_PORT=9080
AUTH_GRPC_PORT=50051
AUTH_HTTP_PORT=8081
AUTH_HEALTH_PORT=51051
CONFIG_GRPC_PORT=50052
CONFIG_HEALTH_PORT=51052
